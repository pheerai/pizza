#!/bin/bash

: ${PIZZAINC:="/usr/local/share/pizza"}
PIZZAHOST=$(hostname -f)
PIZZAUSER=$(whoami)
PIZZAART=
PIZZARCV=

help() {
    echo "pizza - sent small ASCII-Icons by Mail"
    echo "--------------------------------------"
    echo "Usage:  -p         Sent a pizza (default)"
    echo "        -l         Sent a heart"
    echo "        -m <addr>  Receivers address non-optional)"
    echo "        -h         Print this help-message"
}

if [ ! $1 ]; then
    echo "Argument needed!"
    help
    exit 1
fi

while getopts "plhm:" opt; do
    case ${opt} in
	p )
	    : ${PIZZAART:="pizza"}
	    ;;
	l )
	    : ${PIZZAART:="heart"}
	    ;;
	m )
	    PIZZARCV="${OPTARG}"
	    ;;
	h )
	    help
	    exit 0
	    ;;
	\?)
	    help
	    exit 1
	    ;;
    esac
done

: ${PIZZAART:="pizza"}

if [ ! $PIZZARCV ]; then
    echo "Argument '-m' and mailaddress needed!"
    help
    exit 1
fi

mail -s "${PIZZAUSER} sent you a ${PIZZAART} on ${PIZZAHOST}!" ${PIZZARCV} < "${PIZZAINC}/${PIZZAART}"
exit 0
